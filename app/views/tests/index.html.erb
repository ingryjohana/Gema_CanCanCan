<p id="notice"><%= notice %></p>

<h1>Listing Tests</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.nombre %></td>
        <td><%= link_to 'Show', test %></td>
        <% if can? :update, @tests %>
          <td><%= link_to 'Edit', edit_test_path(test) %></td>
        <% end %>
        <% if can? :delete, @tests %>
          <td><%= link_to 'Destroy',test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Test', new_test_path %>
